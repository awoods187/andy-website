---
/**
 * Header Component
 *
 * Main site navigation with responsive design and active state highlighting.
 * Displays site logo/name and navigation links to all main pages.
 * Active page is highlighted with different styling for better UX.
 */

// Get current pathname to highlight active navigation item
const currentPath = Astro.url.pathname;
---

<header class="mb-12">
  <nav class="flex items-center justify-between">
    {/* Site logo/name - links to home */}
    <a
      href="/"
      class="text-2xl font-sans font-bold text-black no-underline hover:opacity-70 transition-opacity"
    >
      Andy Woods
    </a>

    {/* Main navigation menu */}
    <ul class="flex gap-6 list-none m-0 p-0">
      {/* Home link */}
      <li>
        <a
          href="/"
          class:list={[
            'text-base no-underline hover:opacity-70 transition-opacity',
            // Active page gets darker color and medium font weight
            currentPath === '/' ? 'text-black font-medium' : 'text-gray-600',
          ]}
        >
          Home
        </a>
      </li>

      {/* Blog link - matches any path starting with /blog */}
      <li>
        <a
          href="/blog/all"
          class:list={[
            'text-base no-underline hover:opacity-70 transition-opacity',
            currentPath.startsWith('/blog') ? 'text-black font-medium' : 'text-gray-600',
          ]}
        >
          Blog
        </a>
      </li>

      {/* About link */}
      <li>
        <a
          href="/about"
          class:list={[
            'text-base no-underline hover:opacity-70 transition-opacity',
            currentPath === '/about' ? 'text-black font-medium' : 'text-gray-600',
          ]}
        >
          About
        </a>
      </li>

      {/* Subscribe link */}
      <li>
        <a
          href="/subscribe"
          class:list={[
            'text-base no-underline hover:opacity-70 transition-opacity',
            currentPath === '/subscribe' ? 'text-black font-medium' : 'text-gray-600',
          ]}
        >
          Subscribe
        </a>
      </li>
    </ul>
  </nav>
</header>
